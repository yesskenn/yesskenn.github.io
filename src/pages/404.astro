---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import { Heading, Link } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
---

<DefaultLayout title="404">
  <section class="my-12">
    <div class="container">
      <Heading level="h1">404</Heading>
    </div>
  </section>
  <section class="my-12">
    <div class="space-content container">
      <p class="text-2xl">PAGE LOST IN THE SAUCE.</p>
      <Link href="/" isButton type="primary" animateOnHover animationType="nudge">
        HEAD HOME.
        <Icon aria-hidden="true" name="lucide:sparkle" size="1.5rem" />
      </Link>
    </div>
  </section>
</DefaultLayout>
