---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import SocialShares from '@components/SocialShares.astro'
import { Heading } from 'accessible-astro-components'
import { getCollection, render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

export async function getStaticPaths() {
  const projects = await getCollection('projects')


  return projects.map((project) => {
   
    return {
        params: { project: project.slug ?? project.id}, // fallback options
        props: { project },
    }
  })
}

interface Props {
  project: CollectionEntry<'projects'> & { featuredImage: string }
}

const { project } = Astro.props
const { Content } = await render(project)


---

<DefaultLayout title={project.data.title} description={project.data.description} url={`/portfolio/${project.slug}`}>
  <PageHeader
    title={project.data.title}
    subtitle={project.data.description}
    bgType="bordered"
    featuredImage={project.featuredImage}
  />
  <section class="my-12">
    <div class="narrow space-content container">
      <Content />
    </div>
  </section>
  <section class="my-12">
    <div class="narrow space-content container">
      <Heading level="h2">Share this project</Heading>
      <p>Like this project? Share it with your network!</p>
      <SocialShares />
    </div>
  </section>
</DefaultLayout>

<style lang="scss" is:global>
  .narrow {
    margin-inline: auto;
    max-width: 65ch;
  }
</style>
